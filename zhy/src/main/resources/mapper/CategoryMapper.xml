<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.binzhou.zhy.mapper.CategoryMapper">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
		 id,	cate_name,	parent_id,	sort_order,	if_show
	</sql>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectByPrimaryKey" resultType="com.binzhou.zhy.entity.Category" parameterType="java.lang.Integer">
        SELECT
        <include refid="Base_Column_List"/>
        FROM zhy_category
        WHERE cate_id = #{cateId}
    </select>

    <!--删除：根据主键ID删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		 DELETE FROM zhy_category
		 WHERE cate_id = #{cateId}
	</delete>

    <!-- 添加 -->
    <insert id="insert" parameterType="com.binzhou.zhy.entity.Category">
		 INSERT INTO zhy_category
 		(cate_id,cate_name,parent_id,sort_order,if_show) 
		 VALUES 
 		(#{cateId},#{cateName},#{parentId},#{sortOrder},#{ifShow}) 
	</insert>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insertSelective" parameterType="com.binzhou.zhy.entity.Category">
        INSERT INTO zhy_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cateId != null">
                cate_id,
            </if>
            <if test="cateName != null">
                cate_name,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="sortOrder != null">
                sort_order,
            </if>
            <if test="ifShow != null">
                if_show,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cateId!=null">
                #{cateId},
            </if>
            <if test="cateName!=null">
                #{cateName},
            </if>
            <if test="parentId!=null">
                #{parentId},
            </if>
            <if test="sortOrder!=null">
                #{sortOrder},
            </if>
            <if test="ifShow!=null">
                #{ifShow},
            </if>
        </trim>
    </insert>

    <!-- 修 改-->
    <update id="updateByPrimaryKeySelective" parameterType="com.binzhou.zhy.entity.Category">
        UPDATE zhy_category
        <set>
            <if test="cateName != null">
                cate_name = #{cateName},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="ifShow != null">
                if_show = #{ifShow},
            </if>

        </set>
        WHERE cate_id = #{cateId}
    </update>

    <!-- 修 改-->
    <update id="updateByPrimaryKey" parameterType="com.binzhou.zhy.entity.Category">
		 UPDATE zhy_category
		 SET 
			 cate_name = #{cateName},
			 parent_id = #{parentId},
			 sort_order = #{sortOrder},
			 if_show = #{ifShow}
		 WHERE cate_id = #{cateId}
	</update>

</mapper>